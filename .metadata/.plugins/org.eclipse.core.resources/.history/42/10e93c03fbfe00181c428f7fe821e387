package cibertec;

import java.awt.EventQueue;

import javax.swing.JDialog;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;
import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class ListarAlfajor extends JDialog implements ActionListener {
	private JScrollPane scrollPane;
	private JTextArea txtS;
	private JButton btnCerrar;
	private JButton btnListar;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					ListarAlfajor dialog = new ListarAlfajor();
					dialog.setDefaultCloseOperation(JDialog.DISPOSE_ON_CLOSE);
					dialog.setVisible(true);
				}
				catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the dialog.
	 */
	public ListarAlfajor() {
		setTitle("Listar alfajores");
		setBounds(100, 100, 450, 300);
		getContentPane().setLayout(null);
		
		scrollPane = new JScrollPane();
		scrollPane.setBounds(10, 11, 414, 192);
		getContentPane().add(scrollPane);
		
		txtS = new JTextArea();
		scrollPane.setViewportView(txtS);
		
		btnCerrar = new JButton("Cerrar");
		btnCerrar.addActionListener(this);
		btnCerrar.setBounds(111, 214, 89, 23);
		getContentPane().add(btnCerrar);
		
		btnListar = new JButton("Listar");
		btnListar.addActionListener(this);
		btnListar.setBounds(230, 214, 89, 23);
		getContentPane().add(btnListar);

	}
	public void actionPerformed(ActionEvent e) {
		if (e.getSource() == btnListar) {
			actionPerformedBtnListar(e);
		}
		if (e.getSource() == btnCerrar) {
			actionPerformedBtnCerrar(e);
		}
	}
	protected void actionPerformedBtnCerrar(ActionEvent e) {
		dispose();
	}
	protected void actionPerformedBtnListar(ActionEvent e) {
		imprimir("Listado de alfajores");
		imprimir("");
		imprimir("Marca: " + Tienda.marca0);
		imprimir("Precio: " + Tienda.precio0);
		imprimir("Contenido: " + Tienda.contenido0);
		imprimir("Peso: " + Tienda.peso0);
		imprimir("Sabor: " + Tienda.peso0);
		imprimir("");
		imprimir("Marca: " + Tienda.marca1);
		imprimir("Precio: " + Tienda.precio1);
		imprimir("Contenido: " + Tienda.contenido1);
		imprimir("Peso: " + Tienda.peso1);
		imprimir("Sabor: " + Tienda.peso1);
		imprimir("");
		imprimir("Marca: " + Tienda.marca2);
		imprimir("Precio: " + Tienda.precio2);
		imprimir("Contenido: " + Tienda.contenido2);
		imprimir("Peso: " + Tienda.peso2);
		imprimir("Sabor: " + Tienda.peso2);
		imprimir("");
		imprimir("Marca: " + Tienda.marca3);
		imprimir("Precio: " + Tienda.precio3);
		imprimir("Contenido: " + Tienda.contenido3);
		imprimir("Peso: " + Tienda.peso3);
		imprimir("Sabor: " + Tienda.peso3);
		imprimir("");
		imprimir("Marca: " + Tienda.marca4);
		imprimir("Precio: " + Tienda.precio4);
		imprimir("Contenido: " + Tienda.contenido4);
		imprimir("Peso: " + Tienda.peso4);
		imprimir("Sabor: " + Tienda.peso4);
		imprimir("");
	}
	
	void imprimir(String s) {
		txtS.append(s + "\n");
	}
}
